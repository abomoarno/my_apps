<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/tv_grid_card_size"
        android:layout_height="@dimen/tv_grid_card_size"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:background="#1C2336"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <afrimoov.ke.utilis.WebImageView
                android:layout_width="@dimen/tv_grid_image_size"
                android:layout_height="@dimen/tv_grid_image_size"
                android:id="@+id/tv_image"
                android:src="@drawable/ic_launcher_background"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>