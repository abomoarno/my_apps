<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Notifications sur votre smartphone"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#003580"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Notifications sur votre smartphone"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Recevez des notifications sur votre smartphone"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Switch
            android:layout_gravity="center_vertical"
            android:id="@+id/notifs_cheked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:text="Récents"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#003580"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:dividerHeight="5dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </ListView>

    <LinearLayout
        android:id="@+id/empty"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/caution"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/message_vide"
            android:text="Aucune alerte n'est activée. Activez des alertes pour vite trouver les annonces qui vous intéressent !!"
            android:textColor="@color/myBlue"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>