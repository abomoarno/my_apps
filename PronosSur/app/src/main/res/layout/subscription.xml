<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/subscription_main_padding"
    android:background="#330104"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="@dimen/subscription_package_margin"
            android:textStyle="bold"
            android:textColor="#04ff00"
            android:layout_gravity="center"
            android:padding="@dimen/subscription_package_padding"
            android:textSize="@dimen/subscription_package_text_size"
            android:text="@string/package_subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/subscription_item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/subscription_item_text_width"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/subscription_item_text_size"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="@string/one_subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@android:color/holo_blue_bright"
            android:layout_width="@dimen/subscription_item_button_width"
            android:layout_height="wrap_content">
            <Button
                android:background="@android:color/holo_green_light"
                android:id="@+id/one_month"
                android:textColor="#fff"
                android:textStyle="bold"
                android:padding="@dimen/subscription_item_button_padding"
                android:textSize="@dimen/subscription_item_button_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/subscription_item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/subscription_item_text_width"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/subscription_item_text_size"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="@string/three_subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/subscription_item_button_width"
            android:layout_height="wrap_content">
            <Button
                android:background="@android:color/holo_green_light"
                android:id="@+id/three_month"
                android:padding="@dimen/subscription_item_button_padding"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="@dimen/subscription_item_button_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/subscription_item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/subscription_item_text_width"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/subscription_item_text_size"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="@string/six_subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/subscription_item_button_width"
            android:layout_height="wrap_content">
            <Button
                android:background="@android:color/holo_green_light"
                android:id="@+id/six_month"
                android:textColor="#fff"
                android:textStyle="bold"
                android:padding="@dimen/subscription_item_button_padding"
                android:textSize="@dimen/subscription_item_button_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/subscription_item_text_width"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/subscription_item_text_size"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="@string/one_year_subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@android:color/holo_blue_bright"
            android:layout_width="@dimen/subscription_item_button_width"
            android:layout_height="wrap_content">
            <Button
                android:background="@android:color/holo_green_light"
                android:id="@+id/one_year"
                android:textColor="#fff"
                android:textStyle="bold"
                android:padding="@dimen/subscription_item_button_padding"
                android:textSize="@dimen/subscription_item_button_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>