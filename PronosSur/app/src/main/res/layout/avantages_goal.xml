<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="#ff0000"
        android:layout_gravity="center"
        android:padding="@dimen/premium_main_text_padding"
        android:textSize="@dimen/premium_main_text_size"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#fff"
        android:text="@string/not_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:padding="@dimen/premium_plus_premium_padding"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/premium_plus_premium_text_size"
            android:textColor="#fff"
            android:layout_margin="@dimen/premium_plus_premium_margin"
            android:layout_gravity="center"
            android:text="@string/plus_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="@dimen/premium_join_goal_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/check"
                android:layout_marginRight="10dp"
                android:layout_width="@dimen/premium_join_goal_image_size"
                android:layout_height="34dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/premium_join_goal_text_size"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="@string/join_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/premium_join_goal_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/check"
                android:layout_width="@dimen/premium_join_goal_image_size"
                android:layout_height="@dimen/premium_join_goal_image_size" />
            <TextView
                android:text="@string/chance_premium"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/premium_join_goal_text_size"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/premium_stars_container_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/goal_selected"
                android:layout_width="@dimen/premium_stars_size"
                android:layout_height="@dimen/premium_stars_size" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/star"
                android:layout_width="@dimen/premium_stars_size"
                android:layout_height="@dimen/premium_stars_size" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/star"
                android:layout_width="@dimen/premium_stars_size"
                android:layout_height="@dimen/premium_stars_size" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/star"
                android:layout_width="@dimen/premium_stars_size"
                android:layout_height="@dimen/premium_stars_size" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/star"
                android:layout_width="@dimen/premium_stars_size"
                android:layout_height="@dimen/premium_stars_size" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/star"
                android:layout_width="@dimen/premium_stars_size"
                android:layout_height="@dimen/premium_stars_size" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/subscription"
        android:background="#04ff6d"
        android:layout_gravity="center"
        android:textSize="@dimen/premium_subscribe_text_size"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@android:color/primary_text_light"
        android:padding="@dimen/premium_subscribe_padding"
        android:text="@string/become_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>