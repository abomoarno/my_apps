<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/notification_main_padding"
    android:background="#e4e4e4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:textColor="#003580"
        android:layout_marginBottom="@dimen/notification_title_margin"
        android:textSize="@dimen/notification_title"
        android:text="Notifications sur votre smartphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/notification_item_margin"
        android:layout_marginBottom="@dimen/notification_item_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/notification_item_size"
                android:textStyle="bold"
                android:text="Notifications sur votre smartphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:text="Recevz des notifications sur votre smartphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Switch
            android:id="@+id/updates"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:textSize="@dimen/notification_title"
        android:textStyle="bold"
        android:textColor="#003580"
        android:layout_marginBottom="@dimen/notification_item_margin"
        android:text="Recents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:dividerHeight="10dp"
        android:divider="@android:color/transparent"
        android:id="@+id/alerts_notifs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>