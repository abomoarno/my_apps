<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/presentation_main_padding_bottom"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/bg2"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:paddingLeft="@dimen/presentation_header_padding"
            android:paddingRight="@dimen/presentation_header_padding"
            android:background="#40b0b0b0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/close"
                android:textAllCaps="false"
                android:layout_gravity="end"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="@dimen/presentation_button"
                android:background="@android:color/transparent"
                android:text="@string/presentation_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/presentation_header"
                android:layout_marginBottom="@dimen/presentation_title_margin"
                android:layout_marginTop="@dimen/presentation_title_margin"
                android:textSize="@dimen/presentation_title"
                android:textStyle="bold"
                android:text="@string/presentation_title"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="@dimen/presentation_subtitle_margin"
                android:layout_marginLeft="@dimen/presentation_subtitle_margin"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="@string/presentation_subtitle"
                android:textSize="@dimen/presentation_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingTop="@dimen/presentation_main_item_padding"
        android:paddingLeft="@dimen/presentation_main_item_padding"
        android:paddingRight="@dimen/presentation_main_item_padding"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginBottom="@dimen/presentation_item_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/heart"
                android:layout_marginRight="@dimen/presentation_item_image_margin"
                android:layout_width="@dimen/presentation_image_size"
                android:layout_height="@dimen/presentation_image_size"
                android:layout_marginEnd="@dimen/presentation_item_image_margin" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/presentation_items_messages"
                    android:textSize="@dimen/presention_items"
                    android:text="@string/presentation_facile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/presentation_items_messages"
                    android:textSize="@dimen/presentation_message"
                    android:text="@string/presentation_facile_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/presentation_item_margin"
            android:layout_marginBottom="@dimen/presentation_item_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/timer"
                android:layout_marginRight="@dimen/presentation_item_image_margin"
                android:layout_width="@dimen/presentation_image_size"
                android:layout_height="@dimen/presentation_image_size"
                android:layout_marginEnd="@dimen/presentation_item_image_margin" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/presentation_items_messages"
                    android:textSize="@dimen/presention_items"
                    android:text="@string/presention_rapide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/presentation_items_messages"
                    android:textSize="@dimen/presentation_message"
                    android:text="@string/presentation_rapide_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/presentation_item_margin"
            android:layout_marginBottom="@dimen/presentation_item_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/shield"
                android:layout_marginRight="@dimen/presentation_item_image_margin"
                android:layout_width="@dimen/presentation_image_size"
                android:layout_height="@dimen/presentation_image_size"
                android:layout_marginEnd="@dimen/presentation_item_image_margin" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/presentation_items_messages"
                    android:textSize="@dimen/presention_items"
                    android:text="@string/presentation_fiable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/presentation_items_messages"
                    android:textSize="@dimen/presentation_message"
                    android:text="@string/presentation_fiable_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/presentation_main_button_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textAllCaps="false"
                android:background="@drawable/presentation_button_connexion"
                android:layout_weight="1"
                android:textColor="@color/blu_title_donnees_personnelles"
                android:id="@+id/connexion"
                android:text="@string/presentation_bouton_connexion"
                android:textSize="@dimen/presentation_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="@dimen/presentation_button_separator"
                android:layout_height="wrap_content" />
            <Button
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="@drawable/presentation_button_creer_compte"
                android:layout_weight="1"
                android:id="@+id/creer_compte"
                android:text="@string/presentation_bouton_creer_compte"
                android:textSize="@dimen/presentation_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>