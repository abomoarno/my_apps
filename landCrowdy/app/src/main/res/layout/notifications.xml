<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/notification_main_padding"
    android:background="#e4e4e4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#003580"
        android:layout_marginBottom="@dimen/notification_title_margin"
        android:textSize="@dimen/notification_title"
        android:text="Autoriser les notifications pour les éléments suivants:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/notification_item_margin"
        android:layout_marginBottom="@dimen/notification_item_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="@dimen/notification_item_size"
            android:textStyle="bold"
            android:text="Mises à jour"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/updates"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/notification_item_margin"
        android:layout_marginTop="@dimen/notification_item_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="@dimen/notification_item_size"
            android:textStyle="bold"
            android:text="Alertes nouvelles annonces"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/notification_item_margin"
        android:layout_marginTop="@dimen/notification_item_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/notification_item_size"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Autres notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/new_annonces"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>