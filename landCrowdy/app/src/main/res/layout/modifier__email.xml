<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#e4e4e4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="@dimen/notification_main_padding"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/modifier_item_margin_top"
            android:layout_marginBottom="@dimen/modifier_item_margin_bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/modifier_item_image_margin"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/modifier_item_image_margin">
                <ImageView
                    android:src="@drawable/close_envelope"
                    android:layout_width="@dimen/modifier_item_image_size"
                    android:layout_height="@dimen/modifier_item_image_size" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/modifier_item_text_width"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/modifier_item_text"
                    android:text="@string/nouveau_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="@dimen/modifier_item_image_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/modifier_item_image_margin">
                <ImageView
                    android:src="@drawable/house_key"
                    android:layout_width="@dimen/modifier_item_image_size"
                    android:layout_height="@dimen/modifier_item_image_size" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/modifier_item_text_width"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/modifier_item_text"
                    android:textStyle="bold"
                    android:text="@string/mot_de_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>