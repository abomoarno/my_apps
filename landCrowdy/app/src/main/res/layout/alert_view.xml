<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/alert_view_padding"
    android:paddingLeft="@dimen/alert_view_padding"
    android:paddingRight="@dimen/alert_view_padding"
    android:background="@drawable/alert_view_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/alert_view_title"
            android:id="@+id/alert_titre"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp" />
        <TextView
            android:id="@+id/alert_status"
            android:textSize="@dimen/alert_view_status"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/alert_view_status_margin"
        android:textSize="@dimen/alert_view_details"
        android:id="@+id/alert_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

   <LinearLayout
       android:gravity="center_horizontal"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/voir_alert"
           android:background="@color/blu_title_donnees_personnelles"
           android:textAlignment="center"
           android:layout_margin="@dimen/alert_view_button_margin"
           android:textAllCaps="false"
           android:textSize="@dimen/alert_view_button"
           android:textColor="#fff"
           android:layout_width="@dimen/alert_view_button_width"
           android:layout_height="@dimen/alert_view_button_height" />
       <ImageView
           android:layout_gravity="center_vertical"
           android:id="@+id/edit_alert"
           android:layout_marginLeft="50dp"
           android:clickable="true"
           android:focusable="true"
           android:src="@drawable/pencil_blue"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginStart="50dp" />
   </LinearLayout>
</LinearLayout>