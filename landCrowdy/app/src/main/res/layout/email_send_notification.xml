<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/pages_bacground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/close"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:text="@string/email_send_confirmation_button"
        android:textColor="@color/blu_title_donnees_personnelles"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/email_send_image_bg"
            android:layout_marginBottom="35dp"
            android:padding="20dp"
            android:src="@drawable/email"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/email_send_confirmation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/email"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:text="abomoarno@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/email_send_confirmation_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>