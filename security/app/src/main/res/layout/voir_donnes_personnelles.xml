<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/pages_bacground"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="@dimen/donnees_personnelles_title_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/donnees_personnelles_title_margin"
                android:layout_marginTop="@dimen/donnees_personnelles_title_margin"
                android:textStyle="bold"
                android:textColor="@color/blu_title_donnees_personnelles"
                android:textSize="@dimen/donnees_personnelles_titles"
                android:text="@string/identite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/donnees_personnelles_item_margin_side"
                android:layout_marginTop="@dimen/donnees_personnelles_item_marginTop"
                android:layout_marginBottom="@dimen/donnees_personnelles_item_marginBottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/donnees_personnelles_item_margin_side">
                <ImageView
                    android:layout_marginRight="@dimen/donnees_personnelles_img_margin"
                    android:src="@drawable/user_male_black_shape"
                    android:layout_width="@dimen/donnees_personnelles_img_size"
                    android:layout_height="@dimen/donnees_personnelles_img_size"
                    android:layout_marginEnd="@dimen/donnees_personnelles_img_margin" />
                <TextView
                    android:id="@+id/nom_prenom"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/donnees_personnelles_entries"
                    android:text="@string/nom_prenom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/donnees_personnelles_title_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/donnees_personnelles_title_margin"
                android:layout_marginTop="@dimen/donnees_personnelles_title_margin"
                android:textStyle="bold"
                android:textColor="@color/blu_title_donnees_personnelles"
                android:textSize="@dimen/donnees_personnelles_titles"
                android:text="@string/messagerie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/donnees_personnelles_item_margin_side"
                android:layout_marginTop="@dimen/donnees_personnelles_item_marginTop"
                android:layout_marginBottom="@dimen/donnees_personnelles_item_marginBottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/donnees_personnelles_item_margin_side">
                <ImageView
                    android:layout_marginRight="@dimen/donnees_personnelles_img_margin"
                    android:src="@drawable/close_envelope"
                    android:layout_width="@dimen/donnees_personnelles_img_size"
                    android:layout_height="@dimen/donnees_personnelles_img_size"
                    android:layout_marginEnd="@dimen/donnees_personnelles_img_margin" />
                <TextView
                    android:id="@+id/email"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/donnees_personnelles_entries"
                    android:text="@string/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/donnees_personnelles_title_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/donnees_personnelles_title_margin"
                android:layout_marginTop="@dimen/donnees_personnelles_title_margin"
                android:textStyle="bold"
                android:textColor="@color/blu_title_donnees_personnelles"
                android:textSize="@dimen/donnees_personnelles_titles"
                android:text="@string/num_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/donnees_personnelles_item_margin_side"
                android:layout_marginTop="@dimen/donnees_personnelles_item_marginTop"
                android:layout_marginBottom="@dimen/donnees_personnelles_item_marginBottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/donnees_personnelles_item_margin_side">
                <ImageView
                    android:layout_marginRight="@dimen/donnees_personnelles_img_margin"
                    android:src="@drawable/phone_receiver"
                    android:layout_width="@dimen/donnees_personnelles_img_size"
                    android:layout_height="@dimen/donnees_personnelles_img_size"
                    android:layout_marginEnd="@dimen/donnees_personnelles_img_margin" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/num_telephone"
                    android:text="@string/num_tel"
                    android:textSize="@dimen/donnees_personnelles_entries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/donnees_personnelles_title_margin"
                android:textStyle="bold"
                android:textColor="@color/blu_title_donnees_personnelles"
                android:textSize="@dimen/donnees_personnelles_titles"
                android:text="@string/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/donnees_personnelles_item_margin_side"
                android:layout_marginTop="@dimen/donnees_personnelles_item_marginTop"
                android:layout_marginBottom="@dimen/donnees_personnelles_item_marginBottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/donnees_personnelles_item_margin_side">
                <ImageView
                    android:layout_marginRight="@dimen/donnees_personnelles_img_margin"
                    android:src="@drawable/facebook_placeholder_for_locate_places_on_maps"
                    android:layout_width="@dimen/donnees_personnelles_img_size"
                    android:layout_height="@dimen/donnees_personnelles_img_size"
                    android:layout_marginEnd="@dimen/donnees_personnelles_img_margin" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/adress"
                    android:text="@string/adress"
                    android:textSize="@dimen/donnees_personnelles_entries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>